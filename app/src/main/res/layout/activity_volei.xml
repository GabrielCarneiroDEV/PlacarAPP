<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/letraX"
        android:text="@string/xDoPlacar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="@dimen/textoGrande"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letraX"
        android:layout_alignStart="@+id/letraX"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-16dp"


        android:text="Set Score"
        android:textColor="@color/grayTime"
        android:textSize="18.85sp" />

    <TextView
        android:id="@+id/placarBahia"
        android:background="#995AE83A"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/letraX"
        android:layout_centerVertical="true"
        android:text="@string/placar2"
        android:gravity="center"
        android:textSize="@dimen/textoGrande"
        />

    <TextView
        android:id="@+id/placarVitoria"
        android:background="#995AE83A"
        android:textColor="@color/white"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/placar1"
        android:gravity="center"
        android:textSize="@dimen/textoGrande"
        android:layout_toEndOf="@+id/letraX"
        android:layout_centerVertical="true"
        />

    <TextView
        android:background="#99006ABC"
        android:id="@+id/setScoreTime1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/placarBahia"
        android:layout_alignStart="@+id/placarBahia"



        />

    <TextView
        android:background="#99006ABC"
        android:id="@+id/setScoreTime2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/placarVitoria"
        android:layout_alignStart="@+id/placarVitoria"



        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bahia"
        android:textColor="@color/grayTime"
        android:textSize="24sp"
        android:layout_below="@+id/setScoreTime1"
        android:layout_alignStart="@+id/placarBahia"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VitÃ³ria"
        android:textColor="@color/grayTime"
        android:textSize="24sp"
        android:layout_below="@+id/setScoreTime2"
        android:layout_alignStart="@+id/placarVitoria"



        />

</RelativeLayout>